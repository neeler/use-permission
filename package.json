    },
    "homepage": "https://github.com/neeler/use-permission#readme",
    "devDependencies": {
        "@trivago/prettier-plugin-sort-imports": "^5.2.2",
        "@types/react": "^18.3.18",
        "prettier": "^3.4.2",
        "react": "^18.3.1",
        "tsup": "^8.3.6",
        "typescript": "^5.7.3"
    },
    "peerDependencies": {
        "react": "^16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0"
